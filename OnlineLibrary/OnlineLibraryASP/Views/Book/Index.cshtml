@using OnlineLibrary.BLL.Enums
@model OnlineLibraryASP.ViewModels.BookTypeViewModel

@{
    ViewData["Title"] = "Books";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Book" asp-action="Index" method="get">
    <p>
        
        <select asp-for="BookType" asp-items="Model.Types">
            <option value="">All</option>
        </select>
        

        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />

    </p>
</form>
<table class="table">
    <thead>
        <tr>
            
            <th>
                <label asp-for="Books.First().Title"> </label>
            </th>
            <th>
                <label asp-for="Books.First().Author"></label>
            </th>
            <th>
                <label asp-for="Books.First().BookType"></label>
            </th>
            <th>
                <label asp-for="Books.First().PublicationDate"></label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Books) {
        <tr>
           
            <td>
                @item.Title
            </td>
            <td>
                @item.Author
            </td>
            <td>
                @item.BookType
            </td>
            <td>
                @item.PublicationDate
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
