@model IEnumerable<OnlineLibrary.BLL.Models.User>

@{
    ViewData["Title"] = "Użytkownicy";
}

<h1>Użytkownicy</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <label asp-for="First().Login"> </label>
            </th>
            <th>
                <label asp-for="First().Rented"> </label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Login
            </td>
            <td>
                @item.Rented.Count()
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
