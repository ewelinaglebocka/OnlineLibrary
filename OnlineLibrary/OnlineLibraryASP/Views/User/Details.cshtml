@model OnlineLibrary.BLL.Models.User

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="Id"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Id
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Login"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Login
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Rented"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Rented.Count()
        </dd>
        <table class="table">
            <tbody>
                @foreach(var item in Model.Rented)
                {
                    <tr>
                        <td>
                            @item.Title
                        </td>
                       <td>
                            @item.Author
                        </td>
                       <td>
                            @item.From
                        </td>
                        <td>
                            @item.To
                        </td>
                    </tr>
                }
            </tbody>
            </table>

    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
