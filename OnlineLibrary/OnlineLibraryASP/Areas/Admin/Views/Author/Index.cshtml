@model IEnumerable<OnlineLibrary.BLL.Models.Author>

@{
    ViewData["Title"] = "Index";
}

<h1>Autorzy</h1>

<div>
    <a asp-action="Create" class="btn btn-outline-secondary" style="margin-right: 10px">Dodaj autora</a>
    <a asp-action="Refresh" class="btn btn-outline-secondary">Odśwież autorów</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th style="width: 400px">
                <label asp-for="First().Name">Imię</label>
            </th>
            
            <th style="width: 400px">
                <label asp-for="First().BooksWriten">Książki w bazie</label>
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="width: 400px">
                @item.Name
            </td>
            
            <td style="width: 400px">
                @item.BooksWriten.Count()
            </td>
            <td style="width: 500px">
                <a asp-action="Edit" class="btn btn-outline-primary" asp-route-id="@item.Id" style="margin-right: 10px; margin-left: 200px">Edytuj</a>
                <a asp-action="Details"class="btn btn-outline-info" asp-route-id="@item.Id" style="margin-right: 10px">Szczegóły</a>
                <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.Id" style="margin-right: 10px">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
